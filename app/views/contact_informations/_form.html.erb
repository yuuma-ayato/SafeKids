<%= form_with(model: @contact_information, local: true ) do |form| %>
<div class="field">
  <%= form.label :family_name %><br />
  <%= form.text_field :family_name %>
</div>

<div class="field">
  <%= form.label :first_name %><br />
  <%= form.text_field :first_name %>
</div>

<div class="field">
  <%= form.label :family_name_kana %><br />
  <%= form.text_field :family_name_kana %>
</div>

<div class="field">
  <%= form.label :first_name_kana %><br />
  <%= form.text_field :first_name_kana %>
</div>

<div class="contact_information_relation">
    <%= form.label :relation %>
    <%= form.select :relation, [["父", "父"], ["母", "母"], ["その他", "その他"]], include_blank: "選択して下さい" %>
  </div>

  <div class="contact_information_other_relation">
    <%= form.label :other_relation %>
    <%= form.text_field :other_relation %>
  </div>

  <div class="contact_information_phone_number">
    <%= form.label :phone_number %>
    <%= form.telephone_field :phone_number %>
  </div>

  <%= form.submit %>
<% end %>

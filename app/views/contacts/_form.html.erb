<div class="container-login">
  <% if @contact.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@contact.errors.count, t('view.error')) %></h2>

    <ul>
      <% @contact.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= form_with(model: @contact, local: true ) do |form| %>

  <%= form.fields_for :names do |name| %>
  <div class="form-row">
    <div class="form-group col-sm-6">
      <%= name.label :family_name %>
      <%= name.text_field :family_name, class: "form-control"  %>
    </div>
    <div class="form-group col-sm-6">
      <%= name.label :first_name %>
      <%= name.text_field :first_name, class: "form-control"  %>
    </div>
    <div class="form-group col-sm-6">
      <%= name.label :family_name_kana %>
      <%= name.text_field :family_name_kana, class: "form-control" %>
    </div>
    <div class="form-group col-sm-6">
      <%= name.label :first_name_kana %>
      <%= name.text_field :first_name_kana, class: "form-control" %>
    </div>
    <% end %>

    <div class="form-group col-sm-12">
      <%= form.label :relation %>
      <%= form.text_field :relation, class: "form-control" %>
    </div>
    <div class="form-group col-sm-12">
      <%= form.label :phone_number %>
      <%= form.telephone_field :phone_number, class: "form-control" %>
    </div>
    <div class="form-group col-sm-12">
      <%= form.label :postal_code %>
      <%= form.text_field :postal_code, class: "form-control" %>
    </div>
    <div class="form-group col-sm-12">
      <%= form.label :prefecture %>
      <%= form.text_field :prefecture, class: "form-control" %>
    </div>
    <div class="form-group col-sm-12">
      <%= form.label :city %>
      <%= form.text_field :city, class: "form-control" %>
    </div>
    <div class="form-group col-sm-12">
      <%= form.label :adress %>
      <%= form.text_field :adress, class: "form-control" %>
    </div>
    <div class="form-group col-sm-12">
      <%= form.label :building %>
      <%= form.text_field :building, class: "form-control" %>
    </div>
    <div class="form-group col-sm-12">
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>


  <div class="form-group col-sm-12">
    <%= form.submit %>
  </div>
    </div>
  <% end %>
</div>

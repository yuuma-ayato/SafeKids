<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <h4>
          <%= comment.content %>
        <button type="button" class = "btn"><%= link_to "編集", edit_reservation_comment_path(reservation, comment), remote: true %></button>
        <button type="button" class = "btn"><%= link_to "削除", reservation_comment_path(comment.reservation_id,
                                            comment.id), method: :delete, remote: true,data: { confirm: "本当に削除しますか?"} %></button>
        </h4>                                      
      </li>
    <% end %>
  <% end %>
</ul>

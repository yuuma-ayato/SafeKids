<div class="container">
  <p class="font-weight-bold">ご利用になるお子様の情報</p>
  <%= render 'shared/flash_messages' %>

  <div class="card">
    <div class="face-photo">
      <%= image_tag @child.image.url, class: "card-img-top" %>
    </div>

    <div class="card-body">
      <% @child.names.each do |name| %>
      <h5 class="card-title">
        <%= name.family_name %>　<%= name.first_name %>
        <span class="small">
          <% if @child.other_gender.present? %>
          （<%= @child.other_gender %>）
          <% else %>
          （<%= @child.gender %>）
          <% end %>
        </span>
      </h5>

      <div class="card-text">
        <p><%= name.family_name_kana %> <%= name.first_name_kana %></p>
        <% end %>
        <p><i class="fas fa-birthday-cake mr-1"></i><%= @child.birth.strftime("%Y年%m月%d日") %>生まれ</p>
      </div>
      <p><%= link_to t('view.edit'), edit_child_path(@child.id), data: { confirm: '本当に変更していいですか？' }, class: "btn btn-outline-danger " %></p>
    </div>
  </div>

  <%= link_to "予約申込みへ", new_reservation_path, class: 'btn btn-outline-primary' %>
</div>

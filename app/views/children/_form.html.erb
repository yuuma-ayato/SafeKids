<%= form_with(model: @child, local: true ) do |form| %>

<%= form.fields_for :names do |name| %>
<div class="child_family_name">
  <%= name.label :family_name %>
  <%= name.text_field :family_name %>
</div>
<div class="child_family_name">
  <%= name.label :first_name %>
  <%= name.text_field :first_name %>
</div>
<div class="child_family_name">
  <%= name.label :family_name_kana %>
  <%= name.text_field :family_name_kana %>
</div>
<div class="child_family_name">
  <%= name.label :first_name_kana %>
  <%= name.text_field :first_name_kana %>
</div>
<% end %>

<div class="child_gender">
  <%= form.label :gender %>
  <%= form.select :gender, [["男", "男"], ["女", "女"]], include_blank: "選択して下さい" %>
</div>

<div class="child_birth">
  <%= form.label :birth %>
  <%= form.date_select :birth, start_year: 2011, end_year: Time.current.year, use_month_numbers: true %>
</div>
<div class="child_image">
  <%= form.label :image %>
  <%= form.file_field :image %>
</div>

<%= form.submit %>
<% end %>

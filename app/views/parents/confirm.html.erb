<h3>以下の内容で登録してもよろしいですか？</h3>
<%= form_with(model: @parent, local: true) do |form| %>
  <%= form.hidden_field :relation %>
  <%= form.hidden_field :other_relation %>
  <%= form.hidden_field :phone_number %>
  <%= form.hidden_field :postal_code %>
  <%= form.hidden_field :prefecture %>
  <%= form.hidden_field :city %>
  <%= form.hidden_field :adress %>
  <%= form.hidden_field :building %>
  <p><%= t('view.relation') %>: <%= @parent.relation %></p>
  <p><%= t('view.other_relation') %>: <%= @parent.other_relation %></p>
  <p><%= t('view.phone_number') %>: <%= @parent.phone_number %></p>
  <p><%= t('view.postal_code') %>: <%= @parent.postal_code %></p>
  <p><%= t('view.prefecture') %>: <%= @parent.prefecture %></p>
  <p><%= t('view.city') %>: <%= @parent.city %></p>
  <p><%= t('view.adress') %>: <%= @parent.adress %></p>
  <p><%= t('view.building') %>: <%= @parent.building %></p>
  <p><%= image_tag(@parent.image.url) if @parent.image && @parent.image.url %></p>
  <p><%= form.hidden_field :image_cache %></p>
  <%= form.submit  "登録する" %>
  <%= form.submit "戻る", name: 'back' %>
<% end %>
